@model PagedList.IPagedList<CenECommerce.Models.State>
@using PagedList.Mvc;

@{
    ViewBag.Title = "States";
}

<div>
    <div class="col-mod-8">
        <h2>List of States</h2>
        <img src="~/Images/Forms/colombia.png" height="150" width="250" />
    </div>
</div>

<p>
    @Html.ActionLink("Create New Record", "Create", new { }, new { @class = "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-bordered table-hover table-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NameState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CodeState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Flag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Shield)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeState)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Flag))
                {
                    <img src="@Url.Content(item.Flag)" alt="Image" style="width:150px;height:250px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Shield))
                {
                    <img src="@Url.Content(item.Shield)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StateId }, new { @class = "btn btn-warning btn-lg" })
                @Html.ActionLink("Details", "Details", new { id = item.StateId }, new { @class = "btn btn-info btn-lg" })
                @Html.ActionLink("Delete", "Delete", new { id = item.StateId }, new { @class = "btn btn-danger btn-lg" })
            </td>
        </tr>
    }

</table>

Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))

