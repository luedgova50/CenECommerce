@model PagedList.IPagedList<CenECommerce.Models.Customer>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Customers";
}

<div>
    <div class="col-mod-8">
        <h2>List of Customers</h2>
        <img src="~/Images/Forms/Customer.jpg" height="150" width="250" />
    </div>
</div>

<p>
    @Html.ActionLink("Create New Record", "Create", new { }, new { @class = "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-bordered table-hover table-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().City.NameCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().LogoC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City.NameCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.LogoC))
                {
                    <img src="@Url.Content(item.LogoC)" alt="Image" style="width:150px;height:250px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-warning btn-lg" })
                @Html.ActionLink("Details", "Details", new { id = item.CustomerID }, new { @class = "btn btn-info btn-lg" })
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-danger btn-lg" })
            </td>
        </tr>
    }

</table>

Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))
