@model PagedList.IPagedList<CenECommerce.Models.PurchaseStatus>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Purchase Status";
}

<div>
    <div class="col-mod-8">
        <h2>List of Purchase Status</h2>
        <img src="~/Images/Forms/purchaseStatus.jpg" height="150" width="250" />
    </div>
</div>

<p>
    @Html.ActionLink("Create New Record", "Create", new { }, new { @class = "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-bordered table-hover table-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseStatusId }, new { @class = "btn btn-warning btn-lg" })
                @Html.ActionLink("Details", "Details", new { id = item.PurchaseStatusId }, new { @class = "btn btn-info btn-lg" })
                @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseStatusId }, new { @class = "btn btn-danger btn-lg" })
            </td>
        </tr>
    }

</table>

Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))
