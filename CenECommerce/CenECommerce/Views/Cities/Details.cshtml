@model CenECommerce.Models.City

@{
    ViewBag.Title = "Cities";
}

<div>
    <div class="col-mod-8">
        <h2>Details City</h2>
        <img src="~/Images/Forms/details.png" height="180" width="200" />
    </div>
</div>

<div>
    <h4>City</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.State.NameState)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State.NameState)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NameCity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameCity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostalCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Flag)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Flag))
            {
                <img src="@Url.Content(Model.Flag)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Shield)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Shield))
            {
                <img src="@Url.Content(Model.Shield)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit Records", "Edit", new { id = Model.CityId }, new { @class = "btn btn-warning btn-lg" })
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-success btn-lg" })
</p>
